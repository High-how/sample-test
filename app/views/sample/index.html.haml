.wrapper
  = render partial: 'header'

  .main
    .main__center
      %h2.main__center__up
        新規会員登録
    
      .main__center__down
        .main__center__down__centerbox

          .main__center__down__centerbox__default

            .main__center__down__centerbox__default__mail
              = link_to new_sample_path do
                .main__center__down__centerbox__default__mail__icon
                  = icon('far', 'envelope')
                .main__center__down__centerbox__default__mail__text
                  メールアドレスで登録する

            .main__center__down__centerbox__default__facebook
              = link_to "#" do
                .main__center__down__centerbox__default__facebook__icon
                  = icon('fab', 'facebook-square')
                .main__center__down__centerbox__default__facebook__text
                  Facebookで登録する

            .main__center__down__centerbox__default__google
              = link_to "#" do
                .main__center__down__centerbox__default__google__icon
                  = icon('fab', 'google')
                .main__center__down__centerbox__default__google__text
                  Googleで登録する
      
  = render partial: 'footer'




