.wrapper
  = render partial: 'address-header'

  .send-new
    .send-new__main
      .send-new__main__top
        %h2 商品送付先住所

      %form.send-new__main__middle
        .send-new__main__middle__center

          .send-new__main__middle__center__form-name
            .send-new__main__middle__center__form-name__div
              %label お名前（全角）
              %span.form-box 必須
            %input.family_name{:name => "family_name_kanji", :placeholder => "例） 山田", :type => "text", :value => ""}
            %input.family_name{:name => "first_name_kanji", :placeholder => "例） 太郎", :type => "text", :value => ""}
            %ul.error-text
              %li#kanji-error.kanji-error

          .send-new__main__middle__center__form-name
            .send-new__main__middle__center__form-name__div
              %label お名前（カナ）
              %span.form-box 必須
            %input.family_name{:name => "family_name_kana", :placeholder => "例） ヤマダ", :type => "text", :value => ""}
            %input.family_name{:name => "first_name_kana", :placeholder => "例） タロウ", :type => "text", :value => ""}
            %ul.error-text
              %li#kana-error.kana-error

          .send-new__main__middle__center__form-groups
            %label 郵便番号
            %span.form-box 必須
            %input.family_name{:name => "post", :placeholder => "例） 1234567", :type => "integer", :value => ""}
            %ul.error-text
              %li#post-error.post-error

          .send-new__main__middle__center__form-groups
            %label 都道府県
            %span.form-box 必須
            .select
              .select__wrap
                .select__wrap__icon
                  = icon('fas', 'angle-down')
                %select.select__wrap__default{:name => "address"}
                  %option{:value => "0"}  ----
            %ul.error-text
              %li#address-error.address-error

          .send-new__main__middle__center__form-groups
            %label 市町村
            %span.form-box 必須
            %input.family_name{:name => "city", :placeholder => "例） 名古屋市中区栄", :type => "string", :value => ""}
            %ul.error-text
              %li#city-error.city-error

          .send-new__main__middle__center__form-groups
            %label 番地
            %span.form-box 必須
            %input.family_name{:name => "number", :placeholder => "例） 3丁目13-20", :type => "string", :value => ""}
            %ul.error-text
              %li#number-error.number-error

          .send-new__main__middle__center__form-groups
            %label 建物名
            %span.form-boxs 任意
            %input.family_name{:name => "building", :placeholder => "例） 栄センタービル 3F", :type => "string", :value => ""}

          .send-new__main__middle__center__form-groups
            %label お届け先電話番号
            %span.form-boxs 任意
            %input.family_name{:name => "phone", :placeholder => "例） 09012345678", :type => "integer", :value => ""}

        .send-new__main__middle__down
          %button.send-new__main__middle__down__btn{:name => "btn", :type => "submit", :value => ""}
            次へ進む

  = render partial: 'login-footer'